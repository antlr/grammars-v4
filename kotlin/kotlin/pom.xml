<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>kotlin</artifactId>
	<packaging>jar</packaging>
	<name>Kotlin grammar</name>
	<parent>
		<groupId>org.antlr.grammars</groupId>
		<artifactId>kotlinparent</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<build>
		<plugins>
			<plugin>
				<groupId>org.antlr</groupId>
				<artifactId>antlr4-maven-plugin</artifactId>
				<version>${antlr.version}</version>
				<configuration>
					<sourceDirectory>${basedir}</sourceDirectory>
					<includes>
						<include>UnicodeClasses.g4</include>
						<include>KotlinLexer.g4</include>
						<include>KotlinParser.g4</include>
					</includes>
					<visitor>true</visitor>
					<listener>true</listener>
					<arguments>
					  <argument>-package</argument>
					  <argument>org.antlr.grammars</argument>
					</arguments>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>antlr4</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.khubla.antlr</groupId>
				<artifactId>antlr4test-maven-plugin</artifactId>
				<version>${antlr4test-maven-plugin.version}</version>
				<configuration>
					<verbose>false</verbose>
					<showTree>false</showTree>
					<grammarName>Kotlin</grammarName>
					<caseInsensitive>true</caseInsensitive>
					<packageName>org.antlr.grammars</packageName>
				</configuration>
				<executions>
					<execution>
						<id>test-kotlinFile</id>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<entryPoint>kotlinFile</entryPoint>
							<exampleFiles>examples/kotlinFile</exampleFiles>
						</configuration>
					</execution>
					<execution>
						<id>test-script</id>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<entryPoint>script</entryPoint>
							<exampleFiles>examples/script</exampleFiles>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
